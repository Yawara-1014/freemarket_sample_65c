.header
  .header__content
    .main
      .main__logo
        = link_to root_path do
          = image_tag("material/logo/logo.png", class: "main__logo__link")
      .main__search
        .search--text
          キーワードから検索
        .search--btn
          = icon('fas', 'fas fa-search fa-lg', id: 'icon')
    .lists
      .list--left
        %ul
          %li カテゴリー
          %li ブランド
      .list--right
        - if user_signed_in?
          = link_to "#", class: 'list--right__link' do
            =icon('far','heart')
            いいね！一覧
          = link_to "#", class: 'list--right__link' do
            =icon('far', 'bell')
            お知らせ
          = link_to mypage_users_path, method: :get, class: 'list--right__link' do
            =icon('far', 'user')
            マイページ
          
        - else
          = link_to "ログイン", new_user_session_path, method: :get, class: 'list--right__link' 
          = link_to "新規会員登録", signups_path, method: :get, class: 'list--right__link'