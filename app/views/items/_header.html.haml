.header
  .header__content
    .main
      = link_to '#', class: 'main__link' do
        = image_tag src='material/logo/logo.png', class: 'main__logo'
        .main__search
          .search--text
            キーワードから検索
          .search--btn
            = icon('fas', 'fas fa-search fa-lg', id: 'icon')
    .lists
      .list--left
        %ul
          %li カテゴリー
          %li ブランド
      .list--right
        - if user_signed_in?
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'list--right__link'
        - else
          = link_to "ログイン", new_user_session_path, method: :get, class: 'list--right__link' 
          = link_to "新規会員登録", signups_path, method: :get, class: 'list--right__link'