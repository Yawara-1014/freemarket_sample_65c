= render 'items/header'

.wrapper__items-buy
  %h2.buy-content__title
    購入内容の確認
    .buy-content__item1
      .buy-content__item__inner
        .buy-item-main 
          .buy-item-image
            = image_tag @item.images.first.src.url, class: "main__image"
          .buy-item-detail
            .buy-item-name
              = @item.name
              %p.buy-price 
                = "#{@item.price}円"
                %span.shipping-free（税込）送料込み
    .buy-content__item2
      %form.buy-form
        .buy-price-table
          .buy-price-table__left
            支払金額
          .buy-price-table__right
            = "#{@item.price}円"
    .buy-content__user-info1
      .buy-content__user-info
        .buy-content__user-info__inner
          .user-info-text
            支払い方法
          - if @default_card_information.blank?
            %br /
          - else
            = "**** **** **** " + "#{@default_card_information.last4}"
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = "有効期限" + exp_month + " / " + exp_year
          .user-info-update
            = link_to "変更する", "#", class: "update-btn"
            %br
    .buy-content__user-info2
      .buy-content__user-info
        .buy-content__user-info__inner
          配送先
          .user-info-text
            %br
            〒
            = current_user.users_address.post_number
            %br
            = current_user.users_address.prefectures
            = current_user.users_address.city
            = current_user.users_address.house_number
            %br
            = current_user.first_name
            = current_user.last_name
          .user-info-update
            = link_to "変更する", "#", class: "update-btn"
        .buy-button
        = form_tag(action: :pay, method: :post) do
          %button.buy-button
            = link_to "購入する", done_item_purchase_index_path, class: "buy-button"


= render 'items/footer'