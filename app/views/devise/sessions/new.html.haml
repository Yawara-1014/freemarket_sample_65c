.wipper
  .signup-header
    .signup-header__logo
      = link_to root_path do
        = image_tag "material/logo/logo.png", class: "signup-header__logo__size"
  .top-main
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login-box
        .login-box__new-account
          %p アカウントをお持ちでない方はこちら
          = link_to signups_path, {class: 'login-box__new-account__btn'} do
            新規登録
        .login-box__main-sns__btn
          =link_to "#" ,method: :post, class:"default-btn login-box__main-sns__btn--facebook" do
            =icon('fab', 'facebook-square', class: "login-box__main-sns__btn--facebook-icon")
            Facebookでログイン
          =link_to "#", method: :post, class:"default-btn login-box__main-sns__btn--google" do
            =icon('fab', 'google', class: "login-box__main-sns__btn--google-icon")
            Googleでログイン
        .login-box__main-form
          .login-box__main-form__mail
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input-btn login-box__main-form__mail__btn"
          .login-box__main-form__password
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-btn login-box__main-form__password__btn"
          - if devise_mapping.rememberable?
            .login-box__main-form__pass-remember
              = f.check_box :remember_me
              = f.label :remember_me
            .login-box__main-form__login-btn
              = f.submit "ログイン", class: "nextpage-btn"
            .login-box__main-form__coment
              = link_to '#', {class: 'login-box__main-form__coment-forgetpass'} do
                パスワードをお忘れの方
        
  = render 'signups/sabfooter'
